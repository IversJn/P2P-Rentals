    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <h2>{{item.name}} Apple Pie</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6">
            <img src="{{item.image}}" height="75%" width="75%">
            <h4>{{item.CreatedAt}} 04/04/2018</h4>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="card">
                <div class="form-check">
                    {{#each recipe.ingredients}}
                    <!--{{> recipes/ingredients-block}}-->
                    <input class="form-check-input" type="checkbox" value="" id="recipe.id">
                    <input class="form-check-input" type="checkbox" value="" id="recipe.id">
                    <input class="form-check-input" type="checkbox" value="" id="recipe.id">
                    <input class="form-check-input" type="checkbox" value="" id="recipe.id">
