<div class="container">
    <div class="card" id="recipe-card">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <h2>{{name}}</h2>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6" id="category-display">
                <h3>Category: </h3>
                <p>{{category}}</p>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <img src="{{image}}" width="70%">
                <br></br>
                <small id="updatedAt">Last Updated </small>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="row">
                    <div class="col-lg-10 col-md-10 col-sm-10 card" id="ingredients-display">
                        <h4>Ingredients</h4>
                        {{ingredients}}
                        {{!-- <div id="ingredients-list-container"></div> --}}
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-10 col-md-10 col-sm-10 card" id="instructions-display">
                        <h4>Instructions</h4>
                        {{instructions}}
                        {{!-- <div id="instructions-list-container"></div> --}}
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <button class="edited align-right btn btn-outline-secondary btn-lg">Edit</button>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-8">
                        <button class="deleted align-right btn btn-outline-danger btn-lg">Delete</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.0/moment.min.js" type="text/javascript"></script>
<script src="../js/recipes.js" type="text/javascript"></script>